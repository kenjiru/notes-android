<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ro.kenjiru.notes" >

    <application
        android:name="com.activeandroid.app.Application"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="AA_DB_NAME"
            android:value="notes.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="5" />

        <activity
            android:name=".ui.list.NotesListActivity"
            android:label="@string/notes_list_activity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".ui.NoteViewActivity"
            android:label="@string/note_view_activity"
            android:parentActivityName=".ui.list.NotesListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ro.kenjiru.notes.ui.list.NotesListActivity" />
        </activity>
    </application>

</manifest>
